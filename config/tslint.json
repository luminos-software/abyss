{
  "extends": ["tslint:latest", "tslint-react", "tslint-config-prettier", "tslint-eslint-rules"],
  "rulesDirectory": "../tslint",
  "rules": {
    "curly": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "forin": false,
    "interface-name": true,
    "jsx-no-lambda": false,
    "label-position": true,
    "member-access": false,
    "member-ordering": [true, "public-before-private", "static-before-instance", "variables-before-functions"],
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": true,
    "no-construct": true,
    "no-debugger": true,
    "no-eval": true,
    "no-inferrable-types": true,
    "no-internal-module": true,
    "no-parameter-properties": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-submodule-imports": [
      true,
      "redux-persist",
      "redux-devtools-extension",
      "redux-saga",
      "@redux-offline/redux-offline",
      "rxjs",
      "lib",
      "navigation",
      "redux",
      "repositories",
      "services",
      "util",
      "config",
      "modules"
    ],
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "radix": true,
    "triple-equals": [true, "allow-null-check"],
    "variable-name": [true, "check-format", "allow-pascal-case", "ban-keywords"],
    "no-any": true,
    "no-empty": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": true,
    "switch-default": true,
    "typedef": true,
    "jsx-no-bind": true,
    "no-implicit-dependencies": false,

    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inner-declarations": true,
    "no-invalid-regexp": true,
    "no-irregular-whitespace": true,
    "no-regex-spaces": true,
    "no-sparse-arrays": true,
    "no-unexpected-multiline": true,
    "valid-typeof": true,
    "no-multi-spaces": true,
    "ter-no-self-compare": true,
    "ter-arrow-body-style": true,
    "ter-prefer-arrow-callback": true,

    "luminos-no-rn-text": true,
    "luminos-no-relative-imports": true
  }
}
